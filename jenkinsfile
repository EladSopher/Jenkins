node {
    def app

    stage('Clone repository') {
        checkout scm
    }

    stage('Build image') {
  
       app = docker.build("eladsopher/node-app", ",")
    }

    stage('Test image') {
  

        app.inside {
            // Start the app and check if it's accessible
            sh 'npm run start &'
            // Wait for a few seconds to ensure the app is up
            sleep 10
            // Check if the app is running on port 4200
            sh 'curl -s http://3.227.22.106:4200 || echo "App is not running"'
        }
    }

    stage('Push image') {
        
        docker.withRegistry('https://registry.hub.docker.com', 'git') {
            app.push("${env.BUILD_NUMBER}")
            app.push("latest")
        }
    }
}
